{
  "name": "apolitical-bug-triage",
  "version": "0.1.0",
  "description": "Automated bug triage for #bug-hunt channel",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "triage": "tsx src/index.ts",
    "triage:dry": "tsx src/index.ts --dry-run",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "slack",
    "linear",
    "automation",
    "bug-triage"
  ],
  "author": "Apolitical Engineering",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@linear/sdk": "^29.0.0",
    "@slack/web-api": "^7.8.0",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
